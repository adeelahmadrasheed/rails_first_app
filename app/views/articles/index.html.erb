<h1>All Articles</h1>

<p><%= link_to "Add new article", new_article_path %></p></br>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td>
				<%= article.title %>
			</td>
			<td>
				<%= article.description %>
			</td>
			<td><%= link_to "Edit", edit_article_path(article) %></td>
			<td><%= link_to "Preview", article_path(article) %></td>
		</tr>
		<% end %>
</table>